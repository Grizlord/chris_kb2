<% provide(:title, @category.name) %>
<h1><%= @category.name %></h1>


<div class="search">
  <%= form_tag category_path, method: :get do %>
    <p>
      <%= text_field_tag :query, params[:query], class: 'form-control' %>
      <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
    </p>
  <% end %>
</div>
  
<% if logged_in? %>
  <div class="new_link">
    <%= link_to 'New Article', new_article_path, class: "btn btn-warning btn-sm" %>
  </div>
<% end %>

<div class="row">
  <div class="article_list">
    <% if @articles.any? %>
      <ol class="articles">
        <%= render 'cat_show' %>
      </ol>
    <% end %>
    
    <%= will_paginate @articles %>
    
  </div>
</div>