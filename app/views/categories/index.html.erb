<% provide(:title, "Categories") %>

<h1>Categories</h1>

<% if logged_in? %>
<div class="new_link">
  <%= link_to 'New Category', new_category_path, class: "btn btn-warning btn-sm" %>
</div>
<% end %>

<div class="row">
  <div class="col-md-8">
    <% if @categories.any? %>
      <ol>
        <%= render @categories %>
      </ol>
    <% end %>
  </div>
</div>