<% provide(:title, @user.name) %>
<div class="row">
  <aside>
    <section class="user_info">
      <div class="user_show_grav">
        <%= gravatar_for @user %><br>
        Member for <%= time_ago_in_words(@user.created_at) %>
      </div>
      <h1>
        <%= @user.name %>'s Contributions
      </h1>
    </section>
  </aside>
  
  <% if @articles.any?  %>
  <div class="article_list">
      
      <ol class="articles">
        <%= render 'layouts/article_list' %>
      </ol>
      
    <%= will_paginate @articles %>
    
  </div>
  <% end %>
</div>