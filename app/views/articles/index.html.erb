<% provide(:title, "Home") %>
<h1 id="home_page_header"> Chris' KB </h1>

<div class="search">
  <%= form_tag articles_path, method: :get do %>
    <p>
      <%= text_field_tag :query, params[:query], class: 'form-control' %>
      <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
    </p>
  <% end %>
</div>

<% if logged_in? %>
<div class="new_link">
<%= link_to 'New Article', new_article_path, class: "btn btn-warning btn-sm" %>
</div>
<% end %>

<div class="row">
  <div>
    <% if params[:query].present? %>
      <ol class="articles">
        <%= render @articles %>
      </ol>
  
    
    <%= will_paginate @articles %>
    <% end %>
  </div>
</div>