<% provide(:title, "Articles") %>

<div>
  <%= link_to 'New Article', new_article_path %>
</div>
  
<%= render 'shared/search' %>

<div class="row">
  <div class="article_list">
    <% if @articles.any? %>
      <ol class="articles">
        <%= render @articles %>
      </ol>
    <% end %>
    
    <%= will_paginate @articles %>
    
  </div>
</div>