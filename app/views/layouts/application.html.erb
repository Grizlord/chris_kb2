<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    
    <%= render 'layouts/header' %>
    
    <div class="container">
      <div class="row">
        <% flash.each do |message_type, message| %>
           <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <% end %>
        
        <div class="col-md-2 categories_div">
          <%= render 'layouts/category_links' %>
          <%= render 'layouts/helpful_links' %>
        </div>
        
        <div class="col-md-9">
          <%= yield %>
        </div>
        
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>