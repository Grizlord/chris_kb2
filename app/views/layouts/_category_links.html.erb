<h3>Categories</h3>

<ul>
  <% @categories.each do |category| %>
    <% if logged_in? && current_user.admin? || logged_in? && current_user.internal? %>
      <li><%= link_to category.name, category %></li>  
    <% else %>
      <% if category.name != "Internal" %>
        <li><%= link_to category.name, category %></li>  
      <% end %>
    <% end %>
  <% end %>
</ul>